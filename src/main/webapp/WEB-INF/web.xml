<?xml version="1.0" encoding="utf-8"?>
<web-app
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" 
	version="2.5">
  <display-name>TODO List App</display-name>
  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>/WEB-INF/classes/log4j.properties</param-value>
  </context-param>
  
  <servlet-mapping>
    <servlet-name>default</servlet-name>
    <url-pattern>*.css</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>websocket</servlet-name>
    <servlet-class>cz.esc.iot.cloudservice.EventServlet</servlet-class>
    <init-param>
  	 <param-name>maxIdleTime</param-name>
  	 <param-value>0</param-value>
	</init-param>
    <load-on-startup>2</load-on-startup>
  </servlet>
  
  <servlet-mapping>
	<servlet-name>websocket</servlet-name>
	<url-pattern>/events/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>http</servlet-name>
    <servlet-class>org.restlet.ext.servlet.ServerServlet</servlet-class>
    <init-param>
  	 <param-name>org.restlet.application</param-name>
  	 <param-value>cz.esc.iot.cloudservice.RestletApplication</param-value>
	</init-param>
	
	<init-param>
     <param-name>org.restlet.clients</param-name>
     <param-value>HTTP HTTPS FILE</param-value>
    </init-param>
    
	<load-on-startup>1</load-on-startup>
  </servlet>
  
  <servlet-mapping>
    <servlet-name>http</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
  
  <filter>
    <filter-name>cross-origin</filter-name>
    <filter-class>org.eclipse.jetty.servlets.CrossOriginFilter</filter-class>
    <init-param>
        <param-name>allowedOrigins</param-name>
        <param-value>*</param-value>
    </init-param>
    <init-param>
        <param-name>allowedMethods</param-name>
        <param-value>GET,POST,DELETE,PUT,HEAD</param-value>
    </init-param>
    <init-param>
        <param-name>allowedHeaders</param-name>
        <param-value>origin, content-type, accept</param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>cross-origin</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>

</web-app>